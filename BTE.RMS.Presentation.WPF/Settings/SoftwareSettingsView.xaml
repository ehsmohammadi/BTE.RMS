<pr:ViewBase x:Class="BTE.RMS.Presentation.WPF.Settings.SoftwareSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:pr="clr-namespace:BTE.Presentation.UI.WPF;assembly=BTE.Presentation.UI.WPF"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
	FlowDirection="RightToLeft">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="تنظیمات عمومی"/>
            <TabItem Header="تنظیمات کاربردی"/>
            <TabItem Header="تنظیمات تقویمی"/>
            <TabItem Header="تنظیمات اوقات شرعی"/>
            <TabItem Header="تنظیمات رسته ها"/>
            <TabItem Header="تنظیمات نمایشی"/>
        </TabControl>
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Margin="10">
            <Button Content="بازگشت" Width="110" Height="30" />
        </StackPanel>
    </Grid>
</pr:ViewBase>
