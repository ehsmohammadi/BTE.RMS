                                </Grid>
                                <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="17" Foreground="Black" FontSize="60"/>
                                <TextBlock Grid.Row="2" FontSize="12" Text="مناسبت های روز" HorizontalAlignment="Center" Margin="10"></TextBlock>
                                <Grid Grid.Row="3" HorizontalAlignment="Center">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                                            <TextBlock Text="اذان صبح" FontSize="10" Margin="5 0 0 0" />
                                            <TextBlock Text="طلوع آفتاب" FontSize="10" Margin="5 0 0 0"/>
