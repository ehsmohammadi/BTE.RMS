@using DayPilot.Web.Mvc
@model BTE.RMS.Presentation.Web.ViewModel.Home.PlanningVM
@{
    ViewBag.Title = "برنامه های روز";
}

<script src="@Url.Content("~/Scripts/DayPilot/daypilot-all.min.js")" type="text/javascript"></script>
<h2 class="page-header">@ViewBag.Title</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <table width="100%">
            <tr>
                <td>
                    <div class="col-md-6 col-sm-6" style="text-align: center; vertical-align: central;">
                        <button class="btn btn-default" data-mddatetimepicker="true" data-targetselector="#todaypick" data-placement="left" data-trigger="click" data-englishnumber="false">تاریخ مورد نظر را انتخاب کنید</button>

                        <form id="form" action="/Home/Planing">
                            <input name="Date" type="hidden" class="form-control" id="todaypick" onchange="myFunction()" value=""/>
                        </form>



                    </div>
                    <div class="col-md-6 col-sm-6" style="text-align: center; vertical-align: central;">
                        @Html.DisplayFor(model => model.Date)
                        |
                        @Html.DisplayFor(model => model.PersianDate)
                        |
                        @Html.DisplayFor(model => model.ArabicDate)
                    </div>

                </td>
                @*<td>

                </td>*@
            </tr>
        </table>
    </div>
    <div class="panel-body">
        <div class="col-md-6 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    سر رسید های مالی
                </div>
                <div class="panel-body">

                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    برنامه ریزی اهداف
                </div>
                <div class="panel-body">

                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6">

            @Html.DayPilotCalendar("dpc", new DayPilotCalendarConfig
            {
                BackendUrl = Url.Content("~/Home/Backend")
                

            })
        </div>
    </div>
</div>
<script>
    function myFunction() {
        document.getElementById("form").submit();
    }

</script>





