                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="#B5D277">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
