@{
    ViewBag.Title = "منابع جدید";
}

<h2 class="page-header">منابع جدید</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">عنوان(شرح)</label>
        <div class="col-md-10">
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">نوع</label>
        <div class="col-md-10">
            <select class="form-control">
                <option>تخصص و دانش</option>
                <option>سرمایه</option>
                <option>امکانات و تجهیزات</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">میزان تخصص</label>
        <div class="col-md-10">
            <input class="form-control" type="number">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-default">ایجاد</button>
        </div>
    </div>
</div>
<hr />
