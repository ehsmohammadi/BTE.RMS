                                <DataGridTextColumn Header="اذان صبح"  Width="Auto" />
                                <DataGridTextColumn Header="طلوع آفتاب"  Width="Auto" />
                                <DataGridTextColumn Header="اذان ظهر"  Width="Auto" />
                                <DataGridTextColumn Header="غروب آفتاب"  Width="Auto" />
