<pr:PageViewBase x:Class="BTE.RMS.Presentation.WPF.Views.SecondaryObjectivesTabControlView.Notes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:pr="clr-namespace:BTE.Presentation.UI.WPF;assembly=BTE.Presentation.UI.WPF"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
	d:DesignHeight="500" d:DesignWidth="800" Width="500" Height="450">
    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"  Margin="0 20 0 0">
            <Label x:Name="lbl_notes" Content="یادداشت ها" />
            <ScrollViewer>
                <RichTextBox x:Name="rtxtNote" Height="300"/>
            </ScrollViewer>
        </StackPanel>
        <GroupBox Header="" Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Right">
                <Button x:Name="btnSubmit" Content="ثبت" Width="90"/>
                <Button x:Name="btnBack" Content="بازگشت" Width="90" Margin="10 0 0 0"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</pr:PageViewBase>
