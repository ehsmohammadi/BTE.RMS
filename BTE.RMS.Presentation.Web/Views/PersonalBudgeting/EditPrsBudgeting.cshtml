@{
    ViewBag.Title = "ویرایش سرفصل درآمد/هزینه";
}

<h2 class="page-header">ویرایش سرفصل درآمد/هزینه</h2>
<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">نوع سرفصل</label>
        <div class="col-md-10">
            <select class="form-control">
                <option>درآمدی</option>
                <option>هزینه ای</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">عنوان سرفصل</label>
        <div class="col-md-10">
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">درآمد/هزینه ماهانه</label>
        <div class="col-md-10">
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">توضیحات</label>
        <div class="col-md-10">
            <textarea class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-default">ثبت</button>
        </div>
    </div>
</div>
<hr />
