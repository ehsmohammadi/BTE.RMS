        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">شرح هدف</label>
        <div class="col-md-10">
            <textarea class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">تصاویر</label>
        <div class="col-md-4">
            <img class="img-thumbnail" style="border: solid 1px; width: 100%; height: 220px; border-color: gainsboro"/>
        </div>
        <br class="col-md-6 "/>
        <div class="col-md-6">
            @*<a class="list-group-item">عنوان تصاویر</a>*@
            <div class="list-group" style="overflow-y: scroll; height: 220px">
