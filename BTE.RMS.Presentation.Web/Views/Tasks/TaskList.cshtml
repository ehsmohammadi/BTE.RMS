@model BTE.RMS.Presentation.Web.ViewModel.TaskListVM

@{
    ViewBag.Title = "Tasks";
}

<h2>یادداشت ها و قرار ملاقات ها</h2>

<div>
    
</div>

<table class="table">
    <tr>
        <th></th>
        <th>عنوان</th>
