@{
    ViewBag.Title = "هدف کلی جدید";
}

<h2 class="page-header">هدف کلی جدید</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">چشم انداز</label>
        <div class="col-md-10">
            <textarea class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">عنوان هدف</label>
        <div class="col-md-10">
            <input type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">اولویت</label>
        <div class="col-md-10">
            <select class="form-control">
                <option>A:مهم-فوری</option>
