<Window x:Class="BTE.RMS.Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"
        Height="650" Width="850" WindowStartupLocation="CenterScreen" >

    <DockPanel>
        <StackPanel DockPanel.Dock="Top"  Height="100" Background="{StaticResource  BackgroundNormal}">
            <!--<Label HorizontalAlignment="Center" VerticalAlignment="Bottom"  FontSize="30">سیستم مدیریت آرامش بانک مهر و اقتصاد</Label>-->
        </StackPanel>
        <StatusBar Height="23" DockPanel.Dock="Bottom" Background="{StaticResource BackgroundNormal}">
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Foreground="{StaticResource Foreground}">در حال بارگذاری</TextBlock>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                
                <ColumnDefinition/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="mainFrame"  Margin="5" BorderThickness="2" BorderBrush="{StaticResource BorderBrushHighlighted}">
            </Frame>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right"  >
                <toolkit:Accordion FlowDirection="RightToLeft" Cursor="Hand" Background="{StaticResource Background}" Width="140" Margin="5">
                    <toolkit:AccordionItem  Header="امروز" Margin="1"  VerticalAlignment="Top">
                        <StackPanel Orientation="Vertical"  Width="140" Height="50" Background="{StaticResource BackgroundNormal}">
                            <Button Style="{StaticResource LinkButton}">نکته ها و مقالات</Button>
                            <Button Style="{StaticResource LinkButton}">تقویم و وقایع</Button>
                        </StackPanel>
                    </toolkit:AccordionItem>
                    <toolkit:AccordionItem Margin="1" Header="مدیریت راهبردی">
                        <StackPanel Orientation="Vertical"  Width="150" Height="50" Background="{StaticResource BackgroundNormal}">
                            <Button Style="{StaticResource LinkButton}">چشم انداز</Button>
                            <Button Style="{StaticResource LinkButton}">اهداف کلی</Button>
                        </StackPanel>
                    </toolkit:AccordionItem>

                </toolkit:Accordion>
                <!--<Menu FlowDirection="RightToLeft" SnapsToDevicePixels="True" Margin="5">
                    <Menu.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical" Width="200" Margin="2"/>
                        </ItemsPanelTemplate>
                    </Menu.ItemsPanel>
                    <MenuItem Header="اهداف کلی">
                        <MenuItem Header="اهداف کلی">
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="اهداف فرعی" >

                    </MenuItem>
                </Menu>-->

            </StackPanel>


        </Grid>
    </DockPanel>
    <!--<Grid>
        <DockPanel>
            <Frame  x:Name="mainFrame" />
        </DockPanel>
    </Grid>-->
</Window>
