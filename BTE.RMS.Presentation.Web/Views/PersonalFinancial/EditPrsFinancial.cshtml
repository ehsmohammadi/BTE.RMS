@{
    ViewBag.Title = "ویرایش حساب مالی";
}

<h2 class="page-header">ویرایش حساب های مالی</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">نوع حساب</label>
        <div class="col-md-10">
            <select class="form-control">
                <option>بانکی</option>
                <option>غیر بانکی</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">عنوان حساب</label>
        <div class="col-md-10">
            <input type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">شماره حساب</label>
        <div class="col-md-10">
            <input type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">نام بانک(شعبه)</label>
        <div class="col-md-10">
            <input type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">توضیحات</label>
        <div class="col-md-10">
            <textarea class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-default">ایجاد</button>
        </div>
    </div>
</div>
<hr />
<div>
    @Html.ActionLink("برگشت به لیست", "PrsFinancialList")
</div>