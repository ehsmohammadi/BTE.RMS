      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Width="500" Height="450"
	d:DesignHeight="500" d:DesignWidth="800">
    <Grid FlowDirection="RightToLeft">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label Content="نقاط قوت"/>
            <ScrollViewer Height="200">
                <RichTextBox x:Name="rtxtStrengths" />
            </ScrollViewer>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" >
            <Label Content="نقاط فرصت"/>
            <ScrollViewer Height="200">
                <RichTextBox x:Name="rtxtMoment" />
            </ScrollViewer>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5 0 0 0">
            <Label Content="نقاط ضعف"/>
            <ScrollViewer Height="200" >
                <RichTextBox x:Name="rtxtWeakPoints"/>
            </ScrollViewer>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5 0 0 0">
            <Label Content="نقاط تهدید"/>
            <ScrollViewer Height="200" >
                <RichTextBox x:Name="rtxtThreat"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
