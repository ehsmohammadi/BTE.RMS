<pr:ViewBase x:Class="BTE.RMS.Presentation.WPF.QuranAndPrayer.PrayerTimesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:pr="clr-namespace:BTE.Presentation.UI.WPF;assembly=BTE.Presentation.UI.WPF"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      FlowDirection="RightToLeft"
      d:DataContext="{StaticResource PrayerTimesVm}"
      d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="اوقات شرعی روز" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="Beige" Margin="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="دوشنبه" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" Background="Beige" BorderBrush="Beige"/>
                                <TextBox Grid.Column="1" Text="1394/08/18" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left" Background="Beige" BorderBrush="Beige"/>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1" Margin="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="اذان صبح:" FontSize="13" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"/>
                                <TextBlock Text="طلوع آفتاب:" FontSize="13" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"/>
                                <TextBlock Text="اذان ظهر:" FontSize="13" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"/>
                                <TextBlock Text="غروب آفتاب:" FontSize="13" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center"/>
                                <TextBlock Text="اذان مغرب:" FontSize="13" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center"/>
                                <TextBlock Text="05:20:16" FontSize="13" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center"/>
                                <TextBlock Text="06:01:20" FontSize="13" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center"/>
                                <TextBlock Text="11:56:30" FontSize="13" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center"/>
                                <TextBlock Text="17:30:13" FontSize="13" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center"/>
                                <TextBlock Text="17:56:24" FontSize="13" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center"/>
                            </Grid>
                        </Grid>

                    </Grid>
                </Grid>
                <Grid Grid.Row="1" Margin="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
