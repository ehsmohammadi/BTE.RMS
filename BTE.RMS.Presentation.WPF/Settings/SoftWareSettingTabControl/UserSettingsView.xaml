<pr:ViewBase x:Class="BTE.RMS.Presentation.WPF.Settings.SoftWareSettingTabControl.UserSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:pr="clr-namespace:BTE.Presentation.UI.WPF;assembly=BTE.Presentation.UI.WPF"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
	FlowDirection="RightToLeft">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="ثبت کاربر جدید" Margin="10">
            <StackPanel HorizontalAlignment="Center">
                <Label Content="لطفا اطلاعات کاربر را وارد کنید" Margin="0 20 0 0"/>
                <Image Source="../../Asset/Images/UserProfileAvatar1.png" Height="120" Width="120" Margin="0 20 0 0"/>
                <Label Content="نام کاربری" Margin="0 10 0 0"/>
                <TextBox Margin="0 5 0 0" Width="200"/>
                <Label Content="کلمه عبور" Margin="0 10 0 0"/>
                <TextBox Margin="0 5 0 0" Width="200"/>
                <Label Content="تکرار کلمه عبور" Margin="0 10 0 0"/>
                <TextBox Margin="0 5 0 0" Width="200"/>
                <Button Content="ثبت کاربر جدید" Margin="0 20 0 26"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="تنظیمات کاربری" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Content="تنظیمات عمومی"/>
                        <Line Width="360" Fill="#A0A0A0" Height="5"/>
                    </StackPanel>
                    <StackPanel Margin="5"> 
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Height="120" Width="120" Source="../../Asset/Images/UserProfileAvatar1.png" Margin="10"/>
                            <StackPanel Grid.Column="1" Margin="10">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="عنوان نمایشی"/>
                                    <TextBox Width="200"></TextBox>
                                </StackPanel>
                                <CheckBox Content="تغییر کلمه عبور" Margin="0 5 0 0"/>
                                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                    <Label Content="کلمه عبور فعلی"/>
                                    <TextBox Width="70" HorizontalAlignment="Left"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Label Content="کلمه عبور جدید"/>
                                    <TextBox Width="70" HorizontalAlignment="Left"/>
                                    <Label Content="تکرار" Margin="5 0 0 0"/>
                                    <TextBox Width="70" HorizontalAlignment="Left"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>
                <GroupBox Grid.Row="1" Header="مدیریت کاربران" Margin="5" Padding="4">
                    <StackPanel Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="فهرست کاربران"/>
                            <ComboBox Width="200"/>
                        </StackPanel>
                        <Line Width="400" Fill="#A0A0A0" Height="5"/>
                        <Label Content="کاربر انتخاب شده"/>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="تغییر کلمه عبور:"/>
                            <Label Content="کلمه عبور جدید"/>
                            <TextBox Width="100"/>
                            <Label Content="تکرار"/>
                            <TextBox Width="100"/>
                        </StackPanel>
                        <Button Content="[بروزرسانی کلمه عبور]" HorizontalAlignment="Right" Margin="5"/>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="حذف کاربر:"/>
                            <Label Content="توجه!اطلاعات حذف شده قابل بازیابی نیستند..."/>
                        </StackPanel>
                        <Button Content="[حذف حساب کاربری]" HorizontalAlignment="Right" Margin="5"/>
                   
                    </StackPanel>

                </GroupBox>
                <StackPanel Grid.Row="2" Margin="5">
                    <Button Content="ثبت تغییرات" HorizontalAlignment="Right" Height="20"/>
                </StackPanel>
            </Grid>

        </GroupBox>
    </Grid>
</pr:ViewBase>
